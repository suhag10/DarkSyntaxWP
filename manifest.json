{
  "manifest_version": 3,
  "name": "DarkSyntaxWP",
  "version": "0.2",
  "author": "Suhag Ahmed",
  "description": "A dark theme extension for WordPress developers.",
  "permissions": ["activeTab", "storage"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "assets/icons/chrome-48.png",
      "48": "assets/icons/chrome-48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://developer.wordpress.org/*"],
      "css": ["src/content.css"],
      "js": ["src/content.js"]
    }
  ],
  "icons": {
    "48": "assets/icons/chrome-48.png",
    "128": "assets/icons/chrome-128.png"
  }
}